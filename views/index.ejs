<% include ./partials/header %>

<div class = "ui  container">
        <h1 class="ui huge header">Αφίσα και τοίχος</h1>

            <div class="ui divided items">
                <% posts.forEach(function(post){ %>
                    <div class = "item">
                        <div class = "image">
                            <img src = "<%= post.image %>">
                        </div>
                        <div class = "content">
                            <a href = "/posts/<%=post._id%>" class = "header"><%= post.title %></a>
                            <div class = "meta">
                                <span><%= post.created.toDateString() %></span>
                            </div>
                            <div class = "description">
                                <p><%= post.body.substring(0, 100) %></p>
                            </div>
                            
                            <div class = "extra">
                                <a class="ui mini button" href = "/posts/<%=post._id%>">
                                  περισσότερα
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        
</div>




<% include ./partials/footer %>